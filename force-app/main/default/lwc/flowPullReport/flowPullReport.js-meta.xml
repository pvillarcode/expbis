<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
        name="accountId"
        type="String"
        label="Account ID"
        description="ID of the related Account"
        required="true"
      />
            <property
        name="businessName"
        type="String"
        label="Business Name"
        description="Name of the business to search for"
        required="true"
      />
            <property
        name="address"
        type="String"
        label="Address"
        description="Address of the business"
      />
            <property
        name="city"
        type="String"
        label="City"
        description="City of the business"
      />
            <property
        name="state"
        type="String"
        label="State"
        description="State of the business"
      />
            <property
        name="zip"
        type="String"
        label="ZIP"
        description="ZIP code of the business"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
